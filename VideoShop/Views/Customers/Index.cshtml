@model PagedList.IPagedList<VideoShop.Models.Customer>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<div class="row">
    <p>
        @Html.ActionLink("New Customer","New","Customers", new {@class="btn btn-primary"})
    </p>
</div>
<div class="row">
    @if (!Model.Any())
    {
        <p>We don't have any customers yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover table-responsive">
            <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@cust.Name, "Edit", "Customers", new { id = cust.Id }, null)</td>
                    <td>@cust.MembershipType.Name</td>
                </tr>
            }
            </tbody>
        </table>

        @Html.PagedListPager(Model, page => Url.Action("Index", 
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    }
</div>
