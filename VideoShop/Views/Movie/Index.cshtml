@model IEnumerable<VideoShop.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="row">
    @if (!Model.Any())
    {
        <p>We don't have any Movies yet.</p>
    }
    else
    {
        @Html.ActionLink("New Movie","New","Movie", new {@class="btn btn-primary"})

        <table class="table table-hover table-responsive table-bordered">
            <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.GenreType.Name</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

